<%- include('partials/nav') %>
<div>
  <% properties.forEach(property => { %>
    <div class="card mt-5" style="width: 48rem; margin: auto;">
      <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"></rect><text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text></svg>
      <div class="card-body">
        <h5 class="card-title"><%= property.address %></h5>
        <span class="card-title">$<%= property.price %>, <%= property.area %>m2</span>
        <p class="card-text"><%= property.description %></p>
        <div>
          <a href="#" class="btn" style="font-size: 30px;"><i class="fa fa-heart-o" aria-hidden="true"></i></a>
          <a href="#" class="btn" style="font-size: 30px; color: red;"><i class="fa fa-heart" aria-hidden="true"></i></a>
        </div>
      </div>
    </div>
  <% }) %>
</div>